<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmelizarraraz.petagram.AcercaDeActivity">

    <include
        android:id="@+id/miActionbarAcercaDe"
        layout="@layout/actionbar"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circleImageProfile"
        android:layout_below="@+id/miActionbarAcercaDe"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/businessman_96"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="10dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvAcerca"
        android:layout_below="@+id/circleImageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_about"
        tools:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_below="@+id/tvAcerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        tools:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvMiNombre"
        android:layout_below="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por: Heriberto Martinez Elizarraraz"
        tools:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout>

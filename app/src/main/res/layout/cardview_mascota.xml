<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cvMascota"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_cardView"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cat_96"
            android:scaleType="centerCrop"
            android:contentDescription="@string/nombre_mascota" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="left"
                >

                <ImageView
                    android:id="@+id/icRateMascotaCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dog_bone"
                    android:layout_marginRight="@dimen/margin_text_cardview"
                    android:contentDescription="@string/rating" />

                <TextView
                    android:id="@+id/tvNombreMascotaCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_mascota"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="right"
                >

                <TextView
                    android:id="@+id/tvRatingMascotaCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating_mascota"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:layout_marginRight="@dimen/margin_text_cardview"
                    />

                <ImageView
                    android:id="@+id/imgRatingMascotaCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dog_bone_color"
                    android:contentDescription="@string/rating" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
